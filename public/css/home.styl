/***************************************
 * Off canvas nav
 ***************************************/
.mobile-nav,.main-body
  transition all ease 0.4s

#work
  backface-visibility: hidden;

.mobile-nav
  width 75%
  background-color #343434
  float left
  margin-left -80%
  height 1000px
  z-index 20
  position fixed
  top 0
  left 0
  ul
    font-family 'CenturyGothicStd', 'Century Gothic', 'CenturyGothic', Helvetica, sans-serif
    font-size 30px
    list-style-type none
    margin 0
    padding 0 0 0 gutter
    li
      padding 12px 0
      border-bottom solid #4C4C4C 2px
  .bottom
    text-align center
    position absolute
    top 35%
    left 20%


.main-body
  min-width 100%
  position relative

.nav-open .mobile-nav
  margin-left 0
  padding-right gutter*0.5


.toggle-nav
  margin 16px 0 0 16px
  float left

.icon-bar
  width 38px
  height 6px
  border-top solid #227DB4 2px
  margin-top 2px
  background-color #2CA1EE



/***************************************
 * Posts
 ***************************************/
.topic-list
  list-style-type none
  padding gutter*0.5 !important
.topic-list li
  margin 5px 0 5px 0
.topic-list a
  color white
  font-size base-font-size
  text-transform uppercase


.icon-lg
  width 60px
.icon-sm
  width 15px
  margin-left 10px
  vertical-align text-top

.avatar
  vertical-align middle
  background-color #e5e5e5
  margin-right gutter*0.5
.avatar-sm
  border-radius 55px
  width 55px



/***************************************
 * Modals
 ***************************************/

.modal
  display none

#simplemodal-overlay
  background-color #000

#simplemodal-container
