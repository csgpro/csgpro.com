border-radii = 4px
gutter = 24px

/***************************************
 * General Styles
 ***************************************/

.browsehappy
  width 320px
  background #fff
  margin auto
  padding 100px

#nav-spacer
  @media desk
    height 96px
  @media mobile
    height 60px

img
  transition-property width,height,margin-bottom,margin-top,margin-left,margin-right
  transition-timing-function ease
  transition-duration 0.5s

body
  overflow-x hidden

thead tr
  border-bottom 1px solid #ccc

td, th
  padding 3px 24px 3px 0

/***************************************
 * Sticky Footer CSS
 ***************************************/

html,body
  height: 100%

.sticky-footer-wrapper
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -108px

.sticky-footer, .sticky-footer-push
