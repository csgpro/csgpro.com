@import 'nib' // nib does several things including vendor prefixes

/**
 * Nib provides a CSS reset
 */
// global-reset()


/***************************************
 * Variables
 ***************************************/
background-color = #353535
main-blue = #09A4E6
text-blue = #48ABD5
wrapper-max-width = 1060px
mobile = "all and (max-width: 767px)"
desk = "all and (min-width: 768px)"
border-radii = 4px
gutter = 24px

/***************************************
 * General Styles
 ***************************************/
h1,h2,h3,h4,h5,h6
  font-family 'Century Gothic', 'CenturyGothic', Helvetica, sans-serif
  font-weight lighter

#nav-spacer // TODO: fix
  height 96px

body // TODO: fix fonts
  background-color background-color
  font-family 'Century Gothic', 'CenturyGothic', Helvetica, sans-serif

p
  font-family 'Roboto'
  font-size 12px

img
  transition-timing-function ease
  transition-duration 0.5s

a
  color rgb( 66, 158, 199 )
  text-decoration none

.spacer
  height 2px
  background-color #fff
  width 100%

.caps-title
  font-family Roboto, sans-serif
  font-size 16px
  font-weight lighter
  text-transform uppercase

.space-top
  margin-top gutter*2

.text-column
  padding-right gutter


/***************************************
 * Swappable styling
 ***************************************/
.gone
  opacity 0
  transform translate(-50px, 0)
  // display none

.swappable
  position relative

.swappable section
  transition all 0.3s ease
  position absolute

/***************************************
 * Sections
 ***************************************/

// DEBUG: here to keep the sections at the proper size until they have content
// I might end up leaving this as the sections have a static size on the desktop
// version
@media desk
  #main > div > section
    min-height 504px
    max-height 504px
    overflow hidden
@media mobile
  #main > div > section
    overflow hidden

/////////////////////////////////
// HERO
/////////////////////////////////

header
  img
    max-width 80px
    max-height 80px
  background-color #000
  background-image linear-gradient(bottom, rgb(44,44,44) 20%, rgb(29,29,29) 78%)
  border-bottom 3px solid white
  height 80px
  position fixed
  z-index 10
  border-top 1px solid black
  width 100%


#hero
  background-position center
  background-repeat no-repeat
  background-size cover
  color #fff
  @media desk
    background-image url('https://csgsitestorage.blob.core.windows.net/img/1800_main_hero.jpg')
  @media mobile
    background-image url('https://csgsitestorage.blob.core.windows.net/img/1800_main_hero.jpg')
    min-height 500px //TODO: should use javascript to resize
  #mobile-title
    font-family Roboto
    font-style italic
    font-size 25px
    margin gutter*6 10% 0 10%
    text-align left
  #headline
    min-width 335px
    font-size 60px
    font-family 'Roboto'
    color #fff
    font-style italic
    font-weight 100
    line-height 0.814
  #subline
    font-size 51px
    font-family 'Roboto'
    color #fff
    font-style italic
    line-height 0.3
  #tagline
    font-family 'Roboto'
    font-style italic
    font-weight 100
    @media desk
      font-size 30px
      line-height 1.941
      color rgba(82, 189, 236, 0.5)
    @media mobile
      font-size 15px
      line-height 0
      color rgb(82, 189, 236)
  #tagline + div
    @media mobile
      display none
    @media desk
      display inline
    font-size 35px
    font-family Roboto
    font-style italic
    font-weight 100
    padding 0 10px 0 10px
    color rgb( 82, 189, 236 )
  #blocks
    margin-top 50px



/////////////////////////////////
// WORK
/////////////////////////////////
#work-container
  background-image url('/img/work_bg.png')
  background-position center
  background-repeat repeat-y
#work
  // background-color main-blue
  color #fff
  aside
    background-color main-blue
    height 100%

/////////////////////////////////
// SERVICES
/////////////////////////////////
#services-container
  @media desk
    background-image url('/img/services_bg.png')
    background-position center
    background-repeat repeat-y
  @media mobile
    background-color #11517D
#services
  aside
    color #00A3E4
    hr
      @media desk
        width 85%
      border none
      border-bottom 1px solid #00A3E4
      margin 5px 0 0 0
    ul
      margin 0
      padding 0
      list-style-type none
      li.active
        color #fff
        .chevron
          transform rotate(180deg) translateY(25px)
          polyline
            stroke #fff
        > svg
          path
            fill #fff
          polygon
            fill #fff
      li
        @media desk
          cursor pointer
          padding 20px 0 5px 0
        @media mobile
          position relative
          font-size 36px
          padding gutter
          border-bottom 1px solid #2CA3E5
          .chevron
            position absolute
            right 5%
            top 35%
            polyline
              stroke #00A3E4
        > svg // these are the icons in the services section
          vertical-align middle
          @media desk
            width 35px
            height 35px
          @media mobile
            width 50px
            height 50px
          margin-right 10px
          path
            fill #00A3E4
          polygon
            fill #00A3E4
      @media desk
        li:hover
          color #fff
          > svg
            path
              fill #fff
            polygon
              fill #fff
  article
    position relative
    height 504px
    color #043C57
    > div
      padding-right 40px
    hr
      width 97.5%
      border none
      border-bottom 2px solid #ccc
      margin 5px 0 0 0
    .title
      font-size 25px
    section
      width 780px
      svg
        margin -15px 20px 0 0

/////////////////////////////////
// ABOUT
/////////////////////////////////
picture-spacing = 128px

#about-container
  background-image url('/img/about_bg.png')
  background-repeat repeat-x
#about
  aside
    margin-top 25px
    background-color #333333
    border-radius border-radii
    color #fff
    img
      margin 20px 10px 0 0
      display inline-block
      vertical-align middle
    #jerry
      vertical-align middle
      display inline-block
      margin-top 15px
      > span
        font-size 120%
  section
    color #fff
    padding 0 36px 0 36px
  .swapper
    margin 238px 0 0 0
    padding 0
    list-style-type none
    position relative
    .active
      opacity 1
      transform scale(1)
      z-index 6 !important
    li
      transition all 0.3s ease
      opacity 0.4
      transform scale(0.9)
      position absolute
      display inline
    li:nth-child(2)
      left picture-spacing * 1
      z-index 4
    li:nth-child(3)
      left picture-spacing * 2
      z-index 5
    li:nth-child(4)
      left picture-spacing * 3
      z-index 4
    li:nth-child(5)
      left picture-spacing * 4
      z-index 3
    li:hover:not(.active)
      opacity 0.8


/////////////////////////////////
// UPDATES
/////////////////////////////////
#updates-container
  background-image url('/img/posts_bg.png')
  background-repeat repeat-x
#updates
  background-color #F3F3F3
  > div
    margin 0 30px 0 40px
  .container
    padding 20px 0 60px 0
  h1,h2,h3,h4,h5,h6
    margin 0
  div
  // padding: 100px 30px 0 40px;
    position relative
  .circle
    @media desk
      top -40px
      left -15px
      width 80px
      height 80px
    @media mobile
      top -30px
      left -5px
      width 60px
      height 60px
      background-size 70px
    background-position -3px -3px
    position absolute
    background-color #9B9B9B
    border-radius 40px
    box-shadow 0 0 5px 0
  .post
    @media mobile
      margin gutter 0
  .icon-blog
    background-image url('https://csgsitestorage.blob.core.windows.net/img/postIcon_blog.png')
  .icon-career
    background-image url('https://csgsitestorage.blob.core.windows.net/img/postIcon_careers.png')
  .icon-news
    background-image url('https://csgsitestorage.blob.core.windows.net/img/postIcon_news.png')
  article
    color #fff
    padding 10px 15px 10px gutter*2
    border-radius border-radii
    background-color main-blue
.search input
  border solid #D3D3D3 2px
  border-radius 4px
  font-family 'Roboto'
  font-style italic
  padding 3px 3px 3px 12px
  width 100%

/////////////////////////////////
// CONTACT
/////////////////////////////////
#contact-container
  background-image url('/img/contact_bg.jpg')
  background-repeat no-repeat
  background-position top
#contact
  h1
    font-size 1.6em
  p
    margin-top 0
  input,textarea
    background-color #E5E5E5
    width 100%
    max-width 100%
    max-height 150px
    padding 0
    border none
    margin-bottom gutter*0.5
  article
    margin-top gutter*2
  small 
    font-size 60%
  .panel
    padding-right gutter
    padding-bottom gutter
    background-color #FCFCFC
    border-radius border-radii
  .panel div:first-child
    margin-top gutter
  label
    color #0AA3E7
    font-size 12px
    font-weight bolder
    text-transform uppercase
    font-family 'Century Gothic', CenturyGothic, Helvetica, sans-serif
  button
    border none
    border-radius border-radii-1px
    background-color #0AA3E7
    padding 6px
    color white
    font-family Roboto
    font-style italic
    font-size 12px

footer
  min-height 400px
  background-image url('/img/footer_bg.png')
  background-repeat no-repeat
  background-position center top





/***************************************
 * Helpers
 ***************************************/
.hidden
  display none

@media mobile
  .hide-mobile
    display none

@media desk
  .hide-desk
    display none

.right
  text-align right
.center
  text-align center
.left
  text-align left
.fl
  float left
.fr
  float right
.right-gutter
  padding-right 24px
.full
  padding-left 0
.mobile-full
  @media mobile
    padding-left 0

/***************************************
 * Logo
 ***************************************/
.small-logo
  width 60px
  height 60px
  margin 15px 0 0 20px
  cursor pointer

.big-logo
  margin -65px 0 0 0
  height 160px
  width 160px

/***************************************
 * Navigation
 ***************************************/
.wrapper
  margin 0 auto 0 auto
  max-width wrapper-max-width

.selected
  font-size 29px
  color #fff
  line-height 0

.fixed-menu
  z-index 10
  position fixed
  top -3px
  left 0
  width 100%
  box-shadow 0 5px 15px #000
  ul
    margin 35px 0 0 0


nav
  color rgb(74, 170, 212)
  font-size 18px
  position relative
  @media mobile
    display none
  @media desk
    background-color #000
    background-image linear-gradient(bottom, rgb(44,44,44) 20%, rgb(29,29,29) 78%)
    border-bottom 3px solid white
    border-top 3px solid white
    height 92px
    ul
      float right
      margin 35px 0 0 0
      li
        cursor pointer
        display inline
        padding 0 15px 0 15px

