      div.grid__item.eight-twelfths
        div.toggle-nav
          div.icon-bar
          div.icon-bar
          div.icon-bar
      div.grid__item.four-twelfths.right
        a(href='/')
          img(src='/img/logo.svg')
            
    div.main-body
      block content

    nav.fixed-menu.hide-mobile
      div.wrapper
        a(href='/'): img#logo.small-logo(src='/img/logo.svg')
        ul
          li: a(href='/#work') work
          li /
          li: a(href='/#services') services
          li /
          li: a(href='/#about') about
          li /
          li: a.selected(href='/#updates') updates
          li /
          li: a(href='/#contact') contact

